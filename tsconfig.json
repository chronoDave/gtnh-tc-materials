{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "Node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "./build"
  },
  "include": [
    "src",
    "test",
    "scripts",
    "eslint.config.js"
  ]
}